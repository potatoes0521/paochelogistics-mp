@import '../../assets/css/theme.styl'
.checkbox-wrapper
  width 100%
  display flex
  align-items center

.checkbox-item
  flex 1
  font-size 28px
  color $font-color
  display flex
  align-items center
  justify-content center
  margin-left 40px
  
.checkbox
  width 40px
  height 40px
  border-radius 8px
  border 2px solid $font-disabled-color
  margin-right 12px
  display flex
  align-items center
  justify-content center
  font-size 28px

.checked
  color $theme-color
  border 2px solid $theme-color


