@import '../../assets/css/theme.styl'

.indexes
  width  100% 
  height  100% 
  overflow  hidden 
  box-sizing  border-box

.indexes-content  
  width  100% 
  overflow  hidden 
  -webkit-box-sizing  border-box 
  box-sizing  border-box 

.indexes-menu  
  position  fixed 
  top  50% 
  right  0 
  overflow  hidden 
  -webkit-transform  translate3d(0, -50%, 0) 
  transform  translate3d(0, -50%, 0)  
  z-index  805 

.indexes-menu-item  
  padding  2rpx 10rpx 
  color  $theme-color
  font-size  24rpx 
  text-align  center 

.indexes-body  
  width  100% 
  height  100% 
  -webkit-box-sizing  border-box 
  box-sizing  border-box 

.indexes-list  
  width  100% 
  -webkit-box-sizing  border-box 
  box-sizing  border-box 
  overflow  hidden 

.indexes-list-title  
  width 100%
  height 50px
  color  $font-h-color
  font-size  32px 
  padding-left 24px
  display flex
  align-items center
  background-color  #F7F7F7
  box-sizing  border-box 
  overflow  hidden 

.indexes-list-wrapper
  width 100%
  padding 0 60px 0 24px
  box-sizing border-box

.indexes-list-item
  width 100%
  height 96px
  display flex
  align-items center
  border-bottom 2px solid #F5F5F5
  font-size 32px
  color $font-color

.indexes-list-item:last-child
  border none

.check-box
  width 40px
  height 40px
  border-radius 8px
  border 2px solid rgba(210,210,210,1)
  margin-right 32px
  display flex
  align-items center

.box-checked
  border 2px solid $theme-color
  color $theme-color
  font-size 20px
  display flex
  align-items center
  justify-content center

.checked-duigou-img
  width 24px
  height 24px
  overflow hidden
  font-size 24px
  color $theme-color

image
  width 100%
  height 100%
  float left

