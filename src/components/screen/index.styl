@import '../../assets/css/theme.styl'

.drawer-wrapper
  width 100%
  height 100%
  display flex
  justify-content space-between
  flex-direction column

.drawer-list
  width 100%
  flex 1
  box-sizing border-box
  padding 16px 40px 0 32px

.drawer-list-item
  width 100%
  display flex
  align-items center
  justify-content space-between
  padding 16px 0
  color $font-h-color
  font-size 28px

.drawer-item-value
  color $font-color

.icon-style-right
  font-size 24px
  margin-left 10px

.btn-group
  width 100%
  height 82px
  box-sizing border-box
  border-top 2px solid #f7f7f7
  display flex
  align-items center
  justify-content center

.btn
  flex 1
  font-size 32px
  font-weight 600
  display flex
  align-items center
  justify-content center
  height  100%
.reset
  color $font-h-color
  background-color #ffffff

.submit
  color #ffffff
  background-color $theme-color