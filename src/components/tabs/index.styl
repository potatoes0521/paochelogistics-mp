@import '../../assets/css/theme.styl'

.tabs-list
  width 100%
  height 88px
  overflow hidden
  display flex
  align-items center
  background-color #ffffff
  border-top 2px solid #F5F5F5
  border-bottom 2px solid #F5F5F5

.tab-item
  position relative
  flex 1
  color $font-color
  font-size 32px
  text-overflow ellipsis
  height 100%
  overflow hidden
  display flex
  align-items center
  justify-content center
  font-weight 600
  
.tab-item-active::after
  content ''
  width 108px
  height 6px
  background-color $theme-color
  position absolute
  bottom 0
  left 0
  right 0
  margin 0 auto

.tabs-plane
  flex 1
  overflow-y auto

