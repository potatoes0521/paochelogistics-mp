@import '../../assets/css/theme.styl'

.tabs-list
  width 100%
  height 90px
  background-color #ffffff
  z-index 35
  // box-shadow 0px -2px 8px 2px rgba(0, 0, 0, 0.08)
  display flex
  align-items center
  border-bottom 2px solid #f5f5f5

.scroll-view
  height 90px
  width 100%

.scroll-view-select
  width calc(100% - 140px)
  box-sizing border-box

.select-tabs
  // white-space nowrap
  display flex
  align-items center
  justify-content center
  height 100%

.only-tabs
  width 100%
  height 100%
  display flex
  align-items center

.tab-item
  position relative
  flex 1
  height 100%
  color $font-color
  font-size 32px
  font-weight 600
  box-sizing border-box
  display flex
  align-items center
  justify-content center

.tab-item-active::after
  content ''
  width 108px
  height 6px
  background-color $theme-color
  position absolute
  bottom 0
  left 0
  right 0
  margin 0 auto

.tab-item-select
  // padding 0 60px
  line-height 84px

.only-tabs-item
  flex 1
  display flex
  align-items center
  justify-content center

.tab-item-active
  color $theme-color
 
.select-wrapper
  width 140px
  height 100%
  display flex
  align-items center
  justify-content center

.text
  font-size 30px
  color $font-color

.selector-icon
  font-size 24px !important
  margin-left 8px

.line
  width 2px
  height 50%
  background-color #f5f5f5
  border-radius 2px

