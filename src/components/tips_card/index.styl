@import '../../assets/css/theme.styl'
.tips-wrapper
  width 750px
  height 100vh
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  background-color rgba(0, 0, 0, 0.4)
  z-index 101

.tips-card
  width 572px
  height 338px
  background-color #FFFFFF
  border-radius 16px
  padding-top 48px
  box-sizing border-box
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  margin auto

.tips-title
  font-size 36px
  font-weight 700
  color $font-color
  text-align center
  margin-bottom 40px

.tips-content
  font-size 30px
  text-align center
  color $font-h-color
  padding 0 30px
  box-sizing border-box

.tips-btn
  width 100%
  height 92px
  border-top 2px solid #F5F5F5
  display flex
  position absolute
  left 0
  right 0
  bottom 0

.cancel
  width 50%
  height 100%
  font-size 32px
  font-weight 700
  color $font-h-color
  text-align center
  line-height 92px
  border-right 2px solid #F5F5F5
  box-sizing border-box

.confirm
  width 50%
  height 100%
  font-size 32px
  font-weight 700
  color $theme-color
  text-align center
  line-height 92px