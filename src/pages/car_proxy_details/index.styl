@import '../../assets/css/theme.styl'

.page-wrapper
  width 100%
  height 100vh
  display flex
  flex-direction column
  justify-content space-between
  background-color #f5f5f5

.page-main
  flex 1
  overflow-y auto
  position relative

.main-wrapper
  width 100%
  background-image url('https://resource.paoche56.com/paochelogistics/mp_img/car_proxy/car_proxy_details_bg.png')
  background-position center top 
  background-repeat no-repeat
  background-size 100% 286px

.status-wrapper
  width 100%
  height 106px
  box-sizing border-box
  padding 32px 0 0 36px
  line-height 56px
  color #ffffff
  font-weight 700
  font-size 38px

.small-text
  font-size 24px
  line-height 34px
  margin-left 20px

.public-wrapper
  margin 0 24px
  background-color #ffffff
  padding 16px 32px
  position relative
  z-index 1
  border-radius 8px
  margin-bottom 20px
  box-shadow 0px 4px 18px 8px rgba(0,0,0,0.05)

.public-item
  width 100%
  padding 16px 0
  display flex
  align-items center
  justify-content space-between
  line-height 42px
  position relative

.mast-input
  width 18px
  height 74px
  line-height 74px
  position absolute
  left -22px
  top 0
  right 0
  margin auto 0
  color $price-color

.public-label
  width 162px
  font-size 30px
  color $font-color

.font-weight
  font-weight 700

.lang-label
  flex 1

.public-content
  flex 1
  display flex
  align-items center
  justify-content flex-end
  color $font-color
  font-size 30px

.font-ash
  color $font-tip-color

.more-text-wrapper
  align-items stretch

.more-text
  text-align right

.public-input
  text-align left 
  flex 1
  font-size 30px

.public-checkbox
  width 40px
  height 40px
  box-sizing border-box
  border-radius 8px
  border 2px solid $font-disabled-color
  margin-left 16px
  display flex
  align-items center
  justify-content center
  
.public-price
  color $font-color
  font-size 30px

.public-no-check-text
  font-size 30px
  color $font-disabled-color

.open-btn
  width 100%
  padding-bottom 2px
  line-height 40px
  display flex
  align-items center
  justify-content center
  color $font-disabled-color
  font-size 28px
  
.border
  width 100%
  height 2px
  background-color #f5f5f5
  border-radius 8px
  margin-top 26px
  margin-bottom 18px


.icon-for-bottom
  margin-left 8px
  transform rotate(90deg)
  -webkit-transform rotate(90deg)

.icon-for-top
  transform rotate(-90deg)
  -webkit-transform rotate(-90deg)
  
.icon-open
  font-size 24px

.textarea-public
  width 100%
  margin-top 4px
  margin-bottom 16px
  box-sizing border-box
  padding 20px
  background-color #f7f7f7
  font-size 30px
  line-height 42px
  color $font-color
  border-radius 8px
  border 2px solid $font-disabled-color
  position relative

.no-text 
  color $font-disabled-color

.copy-btn
  width 88px
  height 42px
  border-radius 21px
  border 2px solid #E9E9E9
  font-size 24px
  display flex
  align-items center
  justify-content center
  color $font-tip-color
  position absolute
  z-index 2
  right 20px
  top 20px

.express-num-wrapper
  width 100%
  height 80px
  border-radius 8px
  border 2px solid $font-disabled-color
  box-sizing border-box
  display flex
  align-items center
  justify-content space-between
  margin-bottom 32px
  padding 20px

.placeholder-class
  font-size 30px
  color $font-disabled-color

.scan-code
  width 42px 
  height 42px
  color $theme-color
  font-size 42px

.bottom-tips
  width 100%
  line-height 34px
  font-size 24px
  text-align center 
  color $font-h-color
  position absolute
  bottom 24px
  left 0
  right 0
  margin 0 auto

.bottom-btn-wrapper
  width 100%
  height 128px
  box-sizing border-box
  padding 0 24px
  background-color #ffffff
  box-shadow 0px -2px 8px 2px rgba(0,0,0,0.08)
  display flex
  align-items center
  justify-content flex-end

.finishedOrder,
.payOrder
  flex 1
  height 80px
  display flex
  align-items center
  justify-content center
  background-color $price-color
  border-radius 8px
  color #ffffff
  font-size 32px

.share
  width 202px
  height 80px
  display flex
  align-items center
  justify-content center
  border-radius 8px
  border 2px solid #D2D2D2
  font-size 32px
  color $font-color
  margin-left 20px
  box-sizing border-box
  background-color #ffffff
.refund
  font-size 28px
  color #999990
  margin-right 36px
  width 120px

.submitExpressNum
  width 492px
  height 80px
  background-color $price-color
  border-radius 8px
  display flex
  align-items center
  justify-content center
  margin-left 20px
  color #ffffff
  font-size 32px

button 
  margin 0px
  padding 0px

button::after
  border none