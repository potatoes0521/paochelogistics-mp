@import '../../assets/css/theme.styl'

.page-wrapper
  width 100%
  height 100vh
  background-color #f5f5f5

.msg-wrapper
  width 100%
  box-sizing border-box
  padding 0 36px
  background-color #ffffff
  
.public-item
  display flex
  align-items center
  justify-content space-between
  border-bottom 2px solid #f5f5f5
  padding 32px 0

.item-label
  display flex
  align-items center

.important
  width 18px
  margin-right 8px
  color $price-color

.label-text
  font-size 30px
  color $font-color
  font-weight 700

.item-content
  flex 1
  text-align right

.public-input
  text-align right
  font-size 30px

.placeholder-class
  font-size 30px
  color $font-disabled-color

.top-wrapper
  padding-top 32px
  padding-bottom 4px
  line-height 42px
  display flex
  align-items center
  justify-content space-between
  color $font-color

.tips
  text-align right
  font-size 30px
  color $font-disabled-color
  padding-bottom 30px
  
.btn
  width 702px
  height 80px
  background-color $price-color
  border-radius 8px
  color #ffffff
  font-size 30px
  margin 68px auto
  display flex
  align-items center
  justify-content center