@import '../../assets/css/theme.styl'

.page-wrapper
  background-color #ffffff
  width 100%
  height 100vh
  position relative

.top-bg
  width 100%
  height 250px
  background linear-gradient(180deg,rgba(45,142,214,1) 0%,rgba(93,206,254,1) 100%)
  box-sizing border-box
  padding-top 54px
  display flex
  justify-content center
  line-height 56px

.pay-icon
  font-size 56px
  color #ffffff

.top-tips
  font-size 36px
  color #ffffff
  margin-left 16px

.position-wrapper
  width 702px
  position absolute
  top 158px
  left 0
  right 0
  margin 0 auto

.twig
  width 100%
  height 22px
  background-color #238DC6
  border-radius 11px
  position absolute
  top 0
  left 0
  right 0
  margin 0 auto

.twig-blur
  width 708px 
  height 33px 
  background linear-gradient(180deg,rgba(74,205,255,0.75) 0%,rgba(58,159,225,0) 100%) 
  border-radius 8px 
  filter blur(6px)
  position absolute
  top 5px
  left 0
  right 0
  margin 0 auto
  z-index 3 

.order-details-wrapper
  height 400px
  margin 0 20px
  margin-top 10px
  box-shadow 0px 4px 18px 8px rgba(0,0,0,0.05)
  background-color #ffffff
  position relative
  z-index 2
  border-radius 0px 0px 8px 8px

.money-wrapper
  margin 0 32px
  box-sizing border-box
  height 140px
  padding-top 46px
  padding-bottom 20px
  text-align center
  border-bottom 2px dotted #f5f5f5

.money-icon
  font-size 36px
  line-height 50px

.money
  font-size 50px
  line-height 50px
  color $font-color
  font-weight 700

.msg-wrapper
  width 100%
  box-sizing border-box
  padding 16px 32px
  padding-top 24px

.public-item
  width 100%
  padding 16px 0
  display flex
  align-items center
  justify-content space-between
  line-height 40px
  font-size 28px
  color $font-tip-color

.public-label
  width 162px

.public-content
  flex 1
  display flex
  align-items center
  justify-content flex-end

.btn-public
  margin 0 16px
  height 80px
  box-sizing border-box
  display flex
  align-items center
  justify-content center
  margin-bottom 24px 
  border-radius 8px
  font-size 30px

.btn-see
  margin-top 48px
  background-color $price-color
  color #ffffff

.btn-back
  color $price-color
  border 2px solid $price-color