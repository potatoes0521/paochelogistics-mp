@import '../../assets/css/theme.styl'

.page-wrapper
  width 100%
  height 100vh
  display flex
  flex-direction column
  justify-content space-between
  background-color #f5f5f5

.page-main
  width 100%
  flex 1
  position relative
  overflow-y auto

.main-wrapper
  width 100%
  margin-top 324px

.top-bg-img
  width 100%
  height 360px
  position absolute
  top 0
  left 0
  right 0
  margin 0 auto
  background-image url('https://resource.paoche56.com/paochelogistics/mp_img/car_proxy/car_proxy_publish_bg.png')
  background-position center center 
  background-size cover
  background-repeat no-repeat

.public-wrapper
  margin 0 24px
  background-color #ffffff
  padding 16px 32px
  position relative
  z-index 1
  border-radius 8px
  margin-bottom 20px
  box-shadow 0px 4px 18px 8px rgba(0,0,0,0.05)

.public-item
  width 100%
  padding 16px 0
  display flex
  align-items center
  justify-content space-between
  line-height 42px

.public-label
  width 162px
  font-size 30px
  color $font-color
  font-weight 700

.lang-label
  width 200px

.public-content
  flex 1
  display flex
  align-items center
  justify-content flex-end

.public-input
  text-align right
  flex 1
  font-size 30px

.public-checkbox
  width 40px
  height 40px
  box-sizing border-box
  border-radius 8px
  border 2px solid $font-disabled-color
  margin-left 16px
  display flex
  align-items center
  justify-content center

.checked
  border 2px solid $theme-color
  color $theme-color
  font-size 22px
  
.public-price
  color $font-color
  font-size 30px

.public-no-check-text
  font-size 30px
  color $font-disabled-color

.return-address-wrapper
  margin 0 24px
  background-color #ffffff
  padding 16px 32px 48px 10px
  position relative
  z-index 1
  border-radius 8px
  box-shadow 0px 4px 18px 8px rgba(0,0,0,0.05)

.important
  width 18px
  color $price-color
  display flex
  align-items center
  margin-right 6px

.icon-style-right
  font-size 24px
  margin-left 10px
  color $font-disabled-color

.placeholder-class
  font-size 30px
  color $font-disabled-color

.textarea-wrapper
  width 100%
  box-sizing border-box
  margin-top 24px
  padding-left 22px
  position relative

.lick-placeholder-wrapper
  position absolute
  top 0
  left 0px
  box-sizing border-box
  width 100%
  padding 20px
  padding-left 44px

.textarea
  box-sizing border-box
  width 100%
  padding 20px
  height 166px
  border-radius 8px
  border 2px solid $font-disabled-color
  position relative
  z-index 2
  color $font-color
  font-size 30px

.bottom-tips
  width 100%
  line-height 34px
  font-size 24px
  margin-top 68px
  margin-bottom 24px
  text-align center 
  color $font-h-color

.bottom-btn-wrapper
  width 100%
  height 128px
  background-color #ffffff
  box-shadow 0px -2px 8px 2px rgba(0,0,0,0.08)
  display flex
  align-items center
  justify-content space-between

.total
  flex 1
  font-size 34px
  color $font-color
  margin-left 56px

.order-btn
  width 372px
  height 80px
  background $price-color
  border-radius 8px
  color #ffffff
  display flex
  align-items center
  justify-content center
  font-size 32px
  margin-right 24px