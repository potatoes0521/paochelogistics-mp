@import "../../assets/css/theme.styl"

.choose-city-wrapper
  width 100%
  box-sizing border-box

.search-padding-top
  padding-top 124px

.indexes-wrapper
  background-color #FFFFFF
  box-sizing border-box

.search-indexes-wrapper
  height calc(100vh - 124px)

.checked-indexes-wrapper
  height calc(100vh - 140px)

.hot-city-wrapper
  width 100%
  margin-bottom 40px

.hot-title
  font-size 32px
  font-family PingFangSC
  font-weight 700
  color $font-h-color
  line-height 44px
  box-sizing border-box
  padding 24px 0 0 24px

.hot-city-list
  display flex
  flex-wrap wrap

.hot-item
  width 33.33%
  height 72px
  margin-top 24px
  display flex
  justify-content center

.hot-brand-item
  width 25%
  height 120px
  margin-top 36px
  display flex
  flex-direction column
  align-items center

.hot-brand-text
  font-size 26px
  color $font-color
  line-height 36px
  margin-top 16px

.hot-brand-image-wrapper,
.hot-brand-image
  width 64px
  height 64px
  overflow hidden


.hot-item-btn
  width 206px
  height 72px
  border-radius 8px
  color $font-color
  font-size 32px
  display flex
  align-items center
  justify-content center
  border 2px solid $font-disabled-color
  box-sizing border-box

.active-hot-item-btn
  color $theme-color
  border 2px solid $theme-color

.choose-city-search-wrapper
  width 100%
  height 124px
  background-color #FFFFFF
  position fixed
  top 0
  left 0
  right 0
  margin 0 auto
  padding 16px 24px
  border-bottom 16px solid #F5F5F5
  box-sizing border-box

.search-from-wrapper
  width 100%
  height 100%
  background-color #f5f5f5
  display flex
  align-items center
  justify-content space-between
  border-radius 8px
  box-sizing  border-box
  padding 22px 20px

.icon-style
  width 32px
  height 32px
  font-size 32px
  color $font-h-color
  margin-right 12px

.input-wrapper
  flex 1 1 auto
  height 40px

.input,
.input-like
  width 100%
  height 40px
  font-size 28px
  padding 0
  margin 0
  line-height 40px

.input-like
  color $font-disabled-color

.search-wrapper
  width 100%

.search-item
  width 100%
  height 96px
  box-sizing border-box
  padding 0 32px 0 48px
  display flex
  align-items center
  justify-content space-between
  border-bottom 2px solid #F5F5F5

.car-logo,
.car-logo-image
  width 60px
  height 60px
  overflow hidden

.car-logo
  margin-right 24px

.search-item-name
  color $font-color
  font-size 28px

.icon-style-right
  font-size 28px
  color $font-disabled-color 

.check-bottom-wrapper
  width 100%
  height 140px
  display flex
  align-items center
  justify-content space-between
  padding 0 28px
  box-sizing border-box

.check-cancel
  width 290px 
  height 76px 
  border-radius 8px 
  border 2px solid $theme-color
  color $theme-color
  box-sizing border-box
  

.btn-public
  font-size 32px
  display flex
  align-items center
  justify-content center

.check-submit
  width 376px 
  height 76px 
  background-color $theme-color
  border-radius 8px 
  color #FFFFFF