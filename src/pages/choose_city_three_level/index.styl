@import '../../assets/css/theme.styl'

.page-wrapper
  width 100%
  height 100vh
  display flex
  justify-content space-between
  flex-direction column

.title-wrapper
  width 100%
  height 80px
  border-bottom 2px solid #f5f5f5
  display flex
  align-items center
  justify-content space-between

.title-text
  font-size 30px
  font-weight 700
  flex 1
  height 100%
  display flex
  align-items center
  justify-content center

.main-wrapper
  flex 1
  display flex
  align-items stretch
  justify-content space-between

.public
  flex 1
  height 100%
  overflow-y scroll

.choose-icon
  font-size 28px
  width 28px 
  margin-right 8px
  color $theme-color

.city-item
  width 100%
  height 80px
  display flex
  align-items center
  justify-content center

.city-item-text
  font-size 30px
  color $font-h-color

.text-heigh-light
  color $theme-color
  
.btn-wrapper
  width 100%
  height 160px
  display flex
  align-items center
  justify-content center

.btn
  width 638px
  height 80px
  background-color $theme-color
  font-size 32px 
  color #ffffff
  display flex
  align-items center
  justify-content center
  border-radius 8px