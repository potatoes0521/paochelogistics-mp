@import "../../assets/css/theme.styl"
page 
  width 100%
  height 100%
.page-wrapper
  width 100%
  height 100%
  box-sizing border-box
  display flex
  flex-direction column
  justify-content space-between
  background-color #FFFFFF

.choose-search-wrapper
  width 100%
  height 124px
  padding 16px 24px
  border-bottom 16px solid #F5F5F5
  box-sizing border-box


.indexes-wrapper
  box-sizing border-box
  flex 1
  overflow-y auto

.search-from-wrapper
  width 100%
  height 100%
  background-color #f5f5f5
  display flex
  align-items center
  justify-content space-between
  border-radius 8px
  box-sizing  border-box
  padding 22px 20px

.icon-style
  width 32px
  height 32px
  font-size 32px
  color $font-h-color
  margin-right 12px

.input-wrapper
  flex 1 1 auto
  height 40px

.input
  width 100%
  height 40px
  font-size 28px
  padding 0
  margin 0
  line-height 40px

.search-wrapper
  width 100%

.search-item
  width 100%
  height 96px
  box-sizing border-box
  padding 0 32px 0 48px
  display flex
  align-items center
  justify-content space-between
  border-bottom 2px solid #F5F5F5

.search-item-name
  color $font-color
  font-size 28px

.icon-style-right
  font-size 28px
  color $font-disabled-color 

