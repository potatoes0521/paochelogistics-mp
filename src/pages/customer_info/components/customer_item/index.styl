@import "../../../../assets/css/theme.styl"
.customer-item
  width 100%
  box-sizing border-box
  padding 32px 50px 32px 0
  display flex
  justify-content space-between
  align-items center

.customer-left
  flex 1
  display flex
  flex-direction column
  justify-content space-between

.customer-msg
  width 100%
  height 44px
  display flex
  align-items center
  color $font-color
  font-weight 600
  font-size 32px

.name
  margin-right 20px

.customer-right
  width 64px
  display flex
  align-items center
  justify-content flex-end

.customer-company
  line-height 42px
  color $font-h-color
  font-size 30px
  margin-top 8px

.icon-right-style
  font-size 32px
  color $font-h-color

