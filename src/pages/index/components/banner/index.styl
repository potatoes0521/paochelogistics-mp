swiper-item-default()
  background-color #f5f5f5
  background-image url('https://resource.paoche56.com/paochelogistics/mp_img/index/logo.png')
  background-position center center
  background-size 206px 178px
  background-repeat no-repeat

.swiper-wrapper
  width 100%
  height 300px
  border-radius 16px
  overflow hidden
  swiper-item-default()

.swiper
  width 100%
  height 100%

.banner-item
  width 100%
  height 100%
  swiper-item-default()

.banner-image
  width 100%
  height 100%

// 因为自定组件模式下Swiper指示点的样式写在子组件会不生效 
// 所以指示点的样式在父组件