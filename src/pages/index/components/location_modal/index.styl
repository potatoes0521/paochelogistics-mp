.modal-wrapper 
  width 100%
  height 100%
  background rgba(0,0,0,0.2)
  position fixed
  left 0
  right 0
  top 0
  bottom 0
  margin auto 
  display flex
  align-items center
  justify-content center
  z-index 20

.modal-box
  box-sizing border-box
  padding-top 40px
  width 80%
  background-color #FFFFFF
  border-radius 16px
  margin auto
  display flex
  flex-direction column
  justify-content space-between

.modal-main
  width 100%
  text-align center
  font-size 36px
  font-weight 600
  color rgba(51,51,51,1)

.modal-content
  width 100%
  box-sizing border-box
  padding 0 30px
  text-align center
  font-size 30px
  color rgba(153,153,153,1)
  margin 40px 0 66px

.modal-btn-wrapper
  width 100%
  height 92px
  display flex
  justify-content space-between
  box-sizing border-box
  border-top 2px solid rgba(245,245,245,1)

.modal-btn 
  width 50%
  height 92px
  font-size 32px
  font-weight 600
  text-align center
  line-height 92px
  
.model-btn-cancel
  color rgba(153,153,153,1)
  box-sizing border-box
  border-right 2px solid rgba(245,245,245,1)

.model-btn-ok
  color rgba(42,128,192,1) 
  background transparent
  

button::after
  border none 