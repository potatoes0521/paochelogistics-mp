@import '../../../push_offer/index.styl'

.offer-wrapper
  width 100%
  box-sizing border-box
  margin 32px auto
  
.offer-form
  background-color #ffffff
  border-radius 8px
  height 344px
  overflow hidden
  box-shadow 0px 4px 30px 0px rgba(0,0,0,0.15)
  display flex
  flex-direction column
  justify-content space-between
  position relative

.offer-form-top
  width 100%
  box-sizing border-box
  padding 0 32px

.submit-btn
  border-radius 0
  margin 0
  width 100%
  height 80px
  position absolute
  bottom 0
  left 0
  right 0