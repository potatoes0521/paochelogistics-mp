@import '../../../../assets/css/theme.styl'
.tool-wrapper
  width 100%
  border-radius 8px
  overflow hidden
  background-color #ffffff
  margin-bottom 20px
// 只有两个的时候的swiper
.tool-letter-wrapper
  width 100%
  height 168px
  margin-bottom 20px

.tool-swiper,
.tool-swiper-item,
.tool-swiper-image
  height 168px
  width 100%
// 结束

// 多工具列表
.tool-title-wrapper
  height 88px
  display flex
  align-items center
  justify-content space-between
  padding 0 32px
  border-bottom 2px solid #f5f5f5

.tool-title
  font-size 32px
  color $font-color
  font-weight 700

.tool-more-wrapper
  display flex
  align-items center

.tool-more
  font-size 26px
  color $font-h-color

.icon-right-style
  font-size 24px
  color $font-disabled-color
  margin-left 10px

.tool-grid-line
  width 100%
  height 174px
  display flex
  align-items center

.tool-grid-item
  width 33.33%
  height 174px
  display flex
  align-items center
  justify-content center
  flex-direction column

.tool-grid-item-image
  width 88px
  height 88px
  border-radius 50%

.tool-grid-item-text
  font-size 28px
  color $font-color
  line-height 40px
  margin-top 8px

.tool-grid-item-line
  margin 0 24px
  height 2px
  background-color #f5f5f5