@import '../../assets/css/theme.styl'

.index-wrapper
  padding-top 16px

.card-wrapper
  padding-top 0 !important
  padding-bottom 0 !important

.from-item
  width 100%
  padding 32px 0
  box-sizing border-box
  border-bottom 2px solid #f5f5f5

.label-wrapper
  width 100%
  display flex
  align-items stretch
  justify-content space-between

.from-label
  font-size 32px
  color $font-color
  line-height 40px

.from-right
  font-size 28px
  color $font-color
  line-height 40px

.from-radio
  width 250px

.label-hide
  margin-top 16px
  height 40px

.input
  width 100%
  font-size 28px
  line-height 40px
  height 40px
  color $font-color
  border none

.input-placeholder
  color $font-h-color

.close
  width 100%
  box-sizing border-box
  padding 32px 0
  color $theme-color
  font-size 28px

.hide-supplement-wrapper
  padding-bottom 48px

.supplement-item
  width 100%
  height 40px
  display flex
  align-items center
  margin-bottom 18px
.text
  height 40px
  font-size 28px
  color $font-color

.margin-text
  margin-right 20px

.submit-btn
  width 702px
  height 80px
  color #ffffff
  border-radius 8px
  background-color $theme-color
  margin 0 auto
  margin-top 48px
  margin-bottom 58px
  display flex
  align-items center
  justify-content center