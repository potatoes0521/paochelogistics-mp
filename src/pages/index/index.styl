@import '../../assets/css/theme.styl'
@import '../push_offer/index.styl'

.index-wrapper
  padding-top 16px

.showRegister
  width 100%
  height 100%
  position fixed
  top 0
  bottom 0
  right 0
  left  0
  margin  auto
  z-index 80

.text-right
  text-align right

.margin-left
  margin-left 8px

page
  width 100%
  background-color #ffffff !important
.page-wrapper
  width 100%

.swiper-wrapper
  width 100%
  height 300px

.swiper
  width 100%
  height 100%

.banner-item
  width 100%
  height 100%

.swiper .wx-swiper-dot
  width 16px
  height 6px
  border-radius 10px
  background rgba(255,255,255,0.5)
  overflow hidden

.swiper .wx-swiper-dot-active
  width 32px !important
  height 6px
  border-radius 10px
  overflow hidden

.banner-image
  width 100%
  height 100%

.offer-wrapper
  width 100%
  height 392px
  background-color #f7f7f7
  box-sizing border-box
  padding 24px

.offer-form
  background-color #ffffff
  border-radius 8px
  height 344px
  overflow hidden
  box-shadow 0px 4px 30px 0px rgba(0,0,0,0.15)
  display flex
  flex-direction column
  justify-content space-between

.offer-form-top
  width 100%
  box-sizing border-box
  padding 0 32px

.submit-btn
  border-radius 0
  margin 0
  height 80px

.recommend-list
  width 100%
  padding 12px 48px
  box-sizing border-box

.recommend-item
  padding 12px 0
  display flex
  align-items center
  justify-content space-between

.recommend-city
  font-size 32px
  font-weight 700
  color $font-color

.icon-right-tou
  font-size 32px
  margin 0 16px

.predict
  background-color #FFE9E0
  border-radius 8px
  width 220px
  height 48px
  display flex
  align-items center
  justify-content center
  font-size 24px
  color $price-color

.weight-text
  font-weight 700
  font-size 28px
  margin-left 8px