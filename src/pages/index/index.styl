@import '../../assets/css/theme.styl'
@import '../push_offer/index.styl'
page
  width 100%
  background-color #f7f7f7

.index-wrapper
  padding-top 20px
  padding-right 24px
  padding-left 24px

.showRegister
  width 100%
  height 100%
  position fixed
  top 0
  bottom 0
  right 0
  left  0
  margin  auto
  z-index 80

.text-right
  text-align right

.margin-left
  margin-left 8px

.page-wrapper
  width 100%

swiper-item-default()
  background-color #f5f5f5
  background-image url('https://resource.paoche56.com/paochelogistics/mp_img/index/logo.png')
  background-position center center
  background-size 206px 178px
  background-repeat no-repeat

.swiper-wrapper
  width 100%
  height 300px
  border-radius 16px
  overflow hidden
  swiper-item-default()

.swiper
  width 100%
  height 100%

.banner-item
  width 100%
  height 100%
  swiper-item-default()

.swiper .wx-swiper-dot
  width 16px
  height 6px
  border-radius 10px
  background rgba(255,255,255,0.5)
  overflow hidden

.swiper .wx-swiper-dot-active
  width 32px !important
  height 6px
  border-radius 10px
  overflow hidden

.banner-image
  width 100%
  height 100%

.offer-wrapper
  width 100%
  box-sizing border-box
  margin 32px auto
  
.offer-form
  background-color #ffffff
  border-radius 8px
  height 344px
  overflow hidden
  box-shadow 0px 4px 30px 0px rgba(0,0,0,0.15)
  display flex
  flex-direction column
  justify-content space-between
  position relative

.offer-form-top
  width 100%
  box-sizing border-box
  padding 0 32px

.submit-btn
  border-radius 0
  margin 0
  width 100%
  height 80px
  position absolute
  bottom 0
  left 0
  right 0
  
.recommend-list
  width 100%
  padding 12px 24px
  box-sizing border-box
  background-color #ffffff

.recommend-item
  padding 12px 0
  display flex
  align-items center
  justify-content space-between

.recommend-city
  font-size 32px
  font-weight 700
  color $font-color

.icon-right-tou
  font-size 32px
  margin 0 16px

.predict
  background-color #FFE9E0
  border-radius 8px
  width 220px
  height 48px
  display flex
  align-items center
  justify-content center
  font-size 24px
  color $price-color

.weight-text
  font-weight 700
  font-size 28px
  margin-left 8px

.recommend-no-data
  width 402px
  margin 0 auto
  margin-top 50px

.no-data-image
  height 230px
  width 100%

.tips-text
  font-size 24px 
  color $font-h-color
  text-align center
  line-height 40px
  margin-top 10px