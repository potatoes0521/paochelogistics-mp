@import "../../assets/css/theme"

.user-msg-wrapper
  width 100%
  height 260px
  border-top 2px solid #F5F5F5
  background-color #ffffff
  box-sizing border-box
  display flex
  align-items center
  justify-content space-between
  flex-direction column
  padding 24px 0
  border-bottom 20px solid #f5f5f5

.nick-name
  font-size 32px
  line-height 44px
  color $font-color
  font-weight 600

.no-login
  color $font-h-color

.user-icon 
  width 128px
  height 128px
  border-radius 50%
  overflow hidden
  // border 8px solid #f5f5f5
  display flex
  align-items center
  justify-content center

.user-icon-img
  width 100%
  height 100%

image
  width 100%
  height 100%

.user-list
  width 100%
  box-sizing border-box
  padding-left 48px
  border-bottom 2px solid #F5F5F5

.list-item
  display flex
  align-items center
  flex-direction row
  justify-content space-between
  height 108px
  box-sizing border-box
  padding-right 48px
  border-bottom 2px solid #F5F5F5
.list-item:last-child
  border none

.list-right
  width 32px
  height 32px
  display flex
  align-items center
  justify-content center
  flex-direction row
  font-size 28px
  color $font-disabled-color

.list-left 
  display flex
  align-items center
  flex-direction row
  //height 32px

.icon-img
  width 64px
  height 64px
  margin-right 24px

.icon-style
  color $theme-color
  font-size 38px
  margin-right 16px

.item-name
  font-size 30px
  color $font-color

.handle-register
  width 100%
  height 300px
  position fixed
  top 0
  right 0
  left 0
  z-index 20
  margin auto