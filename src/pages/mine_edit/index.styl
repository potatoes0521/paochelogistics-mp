@import '../../assets/css/theme.styl'

.page-wrapper
  width 100%
  height 100%

.mine-info-wrapper
  width 100%
  box-sizing border-box
  padding-left 48px
  border-top 2px solid #F5F5F5
  border-bottom 2px solid #F5F5F5

.info-item
  width 100%
  box-sizing border-box
  padding 32px 48px 32px 0
  border-bottom 2px solid #F5F5F5
  display flex
  justify-content space-between

.info-item:last-child
  border none

.item-label
  width 190px
  font-size 32px
  color $font-color

.item-text
  flex 1
  text-align right
  font-size 30px
  color $font-color

.edit-btn-group
  height 80px
  border-radius 8px
  display flex
  align-items center
  justify-content space-between
  font-size 32px
  margin 72px 26px

.btn
  width 332px
  height 100%
  display flex
  align-items center
  justify-content center
  border-radius 8px
  box-sizing border-box

.cancel
  border 2px solid $theme-color
  color $theme-color

.submit
  background-color $theme-color
  color #ffffff

.placeholder-style
  color $font-h-color
  font-size 30px

.input-public
  width 100%
  height 42px
  font-size 30px
  color $font-color