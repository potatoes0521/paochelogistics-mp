@import '../../assets/css/theme.styl'

.page-wrapper
  width 100%
  height 100%

.mine-info-wrapper
  width 100%
  box-sizing border-box
  padding-left 48px
  border-top 2px solid #F5F5F5
  border-bottom 2px solid #F5F5F5

.info-item
  width 100%
  box-sizing border-box
  padding 32px 48px 32px 0
  border-bottom 2px solid #F5F5F5
  display flex
  justify-content space-between

.info-item:last-child
  border none

.item-label
  width 250px
  font-size 32px
  color $font-color

.item-text
  flex 1
  text-align right
  font-size 30px
  color $font-h-color

.edit-btn
  width 702px
  height 80px
  border-radius 8px
  background-color $theme-color
  text-align center
  line-height 80px
  color #ffffff
  font-size 32px
  margin 72px auto