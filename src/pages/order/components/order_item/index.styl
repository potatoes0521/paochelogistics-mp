@import '../../../../assets/css/theme.styl'
.order-item
  margin-top 20px
  background-color #ffffff
  width 100%
  box-sizing border-box
  padding 0 48px

.msg-wrapper
  width 100%
  box-sizing border-box
  padding 32px 0
  border-bottom 2px solid #F5F5F5

.list-item
  display flex
  align-items stretch
  justify-content space-between
  width 100%
  line-height 42px

.item-city
  line-height 44px
  font-size 32px
  font-weight 600
  color $font-color
  flex 1

.service-type
  font-size 28px
  font-weight normal
  margin 0 15px

.price-wrapper
  width 155px
  text-align right
  font-size 32px
  color $price-color
  font-weight 600

.price-wrapper-lang
  width 230px
  font-size 26px

.icon-style
  font-size 34px
  margin 0 12px
  font-weight 600
  color $font-color

.order-msg
  font-size 30px
  color $font-color

.order-car-info
  margin-right 20px

.list-item-msg
  margin-top 24px

.btn-group
  width 100%
  display flex
  justify-content flex-end
  padding 32px 0

.btn
  height 64px
  font-size 28px
  display flex
  align-items center
  justify-content center
  padding 0 20px
  border-radius 8px
  box-sizing border-box

.cancel-order
  padding 0 28px
  margin-right 32px
  color $font-color
  border 2px solid $font-disabled-color

.pay-btn
  color $price-color
  border 2px solid $price-color

.order-over .price-state
  color $font-disabled-color

.order-over .price-wrapper-lang
  color $font-color
  
.small-text
  font-size  24px