@import "../../../../assets/css/theme.styl"

.status-wrapper
  display flex
  flex-wrap wrap
  justify-content flex-end

.buttons
  height 64px
  font-size 28px
  line-height 64px
  border-radius 8px
  display flex
  align-items center
  justify-content center

.pay-button
  padding 0 40px
  margin-left 50px
  box-sizing border-box
  border 2px solid $price-color
  color $price-color
  font-weight 400
  background-color $background-color

.reduce-price
  font-size 24px

.change-padding
  padding 0 20px
  
.share-button
  width 200px
  margin-left 50px
  background-color $price-color
  color $background-color

.lower-button
  display flex
  align-items center
  justify-content flex-end

.collect-button
  width 200px
  background-color $background-color
  color $font-color
  box-sizing border-box
  border 2px solid $font-disabled-color

.immediate-pay
  width 200px
  box-sizing border-box
  border 2px solid $price-color
  color $price-color
  background-color $background-color