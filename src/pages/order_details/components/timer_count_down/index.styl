
.bargain-tips-wrapper
  width 100%
  height 122px
  background-color rgba(0,0,0,0.7)
  position fixed
  top 0
  // bottom 0
  left 0
  right 0
  margin 0 auto
  padding 20px 24px 12px
  box-sizing border-box
  display flex
  justify-content space-between
  flex-direction column
  z-index 4

.time-tips
  width 100%
  display flex
  align-items center

.tips
  color #ffffff
  font-size 28px

.tips-text
  line-height 34px
  color $price-color
  font-size 24px

.timer
  display flex
  align-items center
  justify-content center
  height 50px
  color $font-color
  font-size 28px 
  margin-left 10px

.timer-box
  border-radius 8px
  color #ffffff
  width 48px
  height 48px
  background-color #F5A623
  display flex
  align-items center
  justify-content center
  margin 0 6px
  font-size 30px
  font-weight 700
  