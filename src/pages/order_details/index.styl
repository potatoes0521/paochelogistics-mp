@import "../../assets/css/theme.styl"
page 
  width 100%
  height 100%

.page-wrapper
  width 100%
  height 100%
  display flex
  flex-direction column
  justify-content space-between

.page-main
  flex 1 1 auto

.page-footer
  width 750px
  height 208px
  box-shadow 0px -2px 8px 2px rgba(0,0,0,0.08)

.upper-button
  margin-bottom 20px
  float right

.buttons
  display inline-block
  height 64px
  font-size 28px
  line-height 64px
  border-radius 8px

.pay-button
  width 290px
  border 2px solid $price-color
  color $price-color
  font-weight 400
  background-color $background-color

.reduce-price
  font-size 24px

.share-button
  width 200px
  margin 30px 58px 0 32px
  background-color $price-color
  color $background-color

.lower-button
  float right

.cancel-button
  width 200px
  background-color $background-color
  color $font-disabled-color
  border 2px solid $font-disabled-color

.collect-button
  width 200px
  margin 0 58px 0 32px
  background-color $background-color
  color $font-color
  border 2px solid $font-disabled-color