@import "../../assets/css/theme.styl"
page 
  width 100%
  height 100%

.page-wrapper
  width 100%
  height 100%
  display flex
  flex-direction column
  justify-content space-between
  border-top 2px solid #F5F5F5
  box-sizing border-box

.page-main
  flex 1
  overflow-y auto
  padding-bottom 20px
  position relative

.order-msg
  margin-top 120px

.help-order-msg
  margin-top 20px

.card-wrapper
  position relative
  z-index 2

.page-footer
  border-top 2px solid #F5F5F5
  box-sizing border-box

.dividing-line
  height 2px
  background rgba(245,245,245,1)
  margin 32px 0
  

.bargain-tips-wrapper
  width 100%
  height 122px
  background-color rgba(0,0,0,0.7)
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  margin 0 auto
  padding 20px 24px 12px
  box-sizing border-box
  display flex
  justify-content space-between
  flex-direction column

.time-tips
  width 100%
  display flex
  align-items center

.tips
  color #ffffff
  font-size 28px

.tips-text
  line-height 34px
  color $price-color
  font-size 24px

.timer
  display flex
  align-items center
  justify-content center
  height 50px
  color $font-color
  font-size 28px 
  margin-left 10px

.timer-box
  border-radius 8px
  color #ffffff
  width 48px
  height 48px
  background-color #F5A623
  display flex
  align-items center
  justify-content center
  margin 0 6px
  font-size 30px
  font-weight 700
  
background-minix(url)
  background-image url(url)
  background-size cover
  background-position center center
  background-repeat no-repeat

.pay-tips-wrapper
  position absolute
  z-index 1
  width 100%
  height 172px
  padding 38px 0px 0px 56px
  box-sizing border-box
  background-minix('https://resource.paoche56.com/paochelogistics/mp_img/no_pay.png')


.pay-text
  width 100%
  text-align left
  font-size 40px
  font-weight 700
  color #FFFFFF

.show-price-wrapper
  width 702px
  box-sizing border-box
  padding 0 32px
  margin 32px auto 

.open-btn
  width 100%
  height 40px
  display flex
  align-items center
  justify-content center
  color $font-h-color
  font-size 28px

.icon-for-bottom
  margin-left 8px
  transform rotate(90deg)
  -webkit-transform rotate(90deg)

.icon-for-top
  transform rotate(-90deg)
  -webkit-transform rotate(-90deg)
  
.icon-open
  font-size 24px
