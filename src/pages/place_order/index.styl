@import '../../assets/css/theme.styl'
page 
 width 100%
 height 100%

.place-order-wrapper
  width 100%
  height 100%
  display flex
  flex-direction column
  justify-content space-between
  border-top 2px solid #F5F5F5
  box-sizing border-box

.place-order-top
  padding 16px 0
  flex 1
  width 100%
  overflow-y auto

.details-from-text
  color $font-disabled-color

.dividing-line
  height 2px
  background rgba(245,245,245,1)
  margin 32px 0

.place-order-button
  width 100%
  height 100px
  margin-top 68px
  background-color $theme-color
  display flex
  justify-content center
  align-items center
  color $background-color
  font-size 32px
  font-weight 600

.details-from-input
  display flex
  justify-content flex-end
  align-items center

.single-price
  color $price-color

.details-from-number
  margin-left 20px

.details-address-input
  width 100%

.choose-customer
  width 702px
  height 108px
  margin 16px auto 0
  padding 30px 32px
  box-sizing border-box
  background-color rgba(128,166,194,1)
  border-radius 8px 8px 0px 0px
  display flex
  justify-content space-between
  align-items center

.customer-info
  display flex
  justify-content space-between
  align-items center

.customer-img
  font-size 46px
  color $background-color
  margin-right 20px

.customer-name
  font-size 36px
  font-weight 600
  color $background-color

.choose-arrow
  font-size 32px
  color $background-color