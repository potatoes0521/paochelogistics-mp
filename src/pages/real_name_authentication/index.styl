@import '../../assets/css/theme.styl'
page 
  background-color #f5f5f5

.page-wrapper
  width 100%
  background-color #f5f5f5
  // display flex
  // align-items center
  // justify-content space-between
  // flex-direction column

.msg-wrapper
  width 100%
  // height 100%
  // flex 1
  // overflow-y auto

.user-wrapper
  width 100%
  padding-left 48px
  overflow hidden
  box-sizing border-box
  background-color #ffffff

.wrapper-margin
  margin-top 20px 

.user-form-item
  width 100%
  padding 32px 48px 32px 0 
  border-bottom 2px solid #f5f5f5
  box-sizing border-box
  display flex
  justify-content space-between
  align-items center
  font-size 30px
  color $font-color

.user-form-item:last-child
  border none

.user-form-label
  width 150px
  color $font-color
  font-size 30px

.user-form-content
  flex 1
  text-align right

.user-form-input
  width 100%

.placeholder-style
  font-size 30px
  color $font-disabled-color

.line
  height 2px
  background-color #f5f5f5

.image-wrapper
  width 100%
  padding 24px 48px
  box-sizing border-box
  background-color #ffffff
  border-top 2px solid #f5f5f5

.image-area-wrapper
  display flex
  align-items center
  justify-content space-between
  width 100%

.photo-tips
  padding-left 8px
  color $font-disabled-color
  font-size 26px

.photo-area
  width 312px
  height 178px
  display flex
  justify-content center
  align-items center
  border-radius 8px
  border 2px dashed $font-disabled-color
  box-sizing border-box
  position relative
  padding 6px
  margin 24px 0

.image-wrapper .photo-area:last-child
  margin 0 auto

.id-photo
  width 100%
  height 100%
  background-repeat no-repeat
  background-position center center
  background-size cover

.bg-before
  background-image url('https://resource.paoche56.com/paochelogistics/mp_img/id_card/id_card_before.png')

.bg-before-license
  background-image url('https://resource.paoche56.com/paochelogistics/mp_img/id_card/id_card_before_license.png')

.bg-after
  background-image url('https://resource.paoche56.com/paochelogistics/mp_img/id_card/id_card_after.png')

.bg-after-license
  background-image url('https://resource.paoche56.com/paochelogistics/mp_img/id_card/id_card_after_license.png')

image
  width 100%
  height 100%
  border-radius 8px

.add-pictures-style
  z-index 1
  position absolute
  top 0 
  bottom 0
  left 0
  right 0
  width 100%
  height 100%
  display flex
  align-items center
  justify-content center
  flex-direction column

.add-pictures-icon
  width 64px
  height 64px
  background-color rgba(0, 0, 0, 0.3)
  border-radius 50%
  font-size 34px
  color #ffffff
  z-index 2
  display flex
  align-items center
  justify-content center

.add-content
  font-size 26px
  color $font-tip-color
  text-align center
  margin-top 4px
  line-height 36px

.submit-wrapper
  width 100%
  height 140px
  display flex
  align-items center
  justify-content center
  background-color #f5f5f5
  margin-top 48px


.submit-btn
  width 702px
  height 80px
  background-color $theme-color
  border-radius 8px
  text-align center
  line-height 80px
  color #FFFFFF
  font-size 32px
  font-weight 700

.start-icon
  width 18px
  font-size 32px
  color #FF672A
  margin-right 8px
