@import '../../assets/css/theme.styl'

.page-wrapper
  padding-top 140px
  position relative

// 新版注册
.register-logo
  width 132px
  height 132px
  margin 0 auto

.register-from
  width 100%

.from-item
  width 640px
  height 100px
  margin 0 auto
  display flex
  align-items flex-end

.input-wrapper
  flex 1 1 auto
  display flex
  align-items flex-end
  height 100%
  border-bottom 1px solid #F5F5F5

.btn-code
  width 208px
  height 72px
  border-radius 12px
  border 1px solid $theme-color
  display flex
  align-items center
  justify-content center
  font-size 28px
  color $theme-color
  margin 0 20px

.disabled-btn
  color $font-disabled-color
  border 1px solid $font-disabled-color

.input-style
  margin-bottom 8px
  line-height 40px
  height 40px

.agreement-wrapper
  display flex
  align-items center
  margin 0 auto
  width 654px
  font-size 24px
  color $font-color

.agree-agreement
  width 28px
  height 28px
  box-sizing border-box
  border-radius 50%
  border none 
  background-color $theme-color
  color #ffffff
  font-size 18px
  text-align center
  line-height 28px

.agreement-radio
  width 28px
  height 28px
  box-sizing border-box
  border 3px solid $font-disabled-color
  border-radius 50%

.agreement-text
  margin-left 12px

.agreement
  color $theme-color

.submit-btn
  width 654px
  height 80px
  border-radius 12px
  margin 16px auto
  color #ffffff
  font-size 34px
  display flex
  align-items center
  justify-content center
  background-color $theme-color
  margin-top  80px

input 
  width 100%
  height 40px
  line-height 40px
  padding 0
  margin 0
  font-size 28px
  color $font-color

.agreements-wrapper
  width 750px
  height 100vh
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  background rgba(0,0,0,0.5)
  z-index 5

.agreements-box
  width 572px
  height 762px
  background rgba(255,255,255,1)
  border-radius 16px
  padding 32px 22px
  box-sizing border-box
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  margin auto
  display flex
  justify-content space-between
  flex-direction column

.agreements-title
  font-size 36px
  font-weight 600
  color rgba(51,51,51,1)
  text-align center

.line
  width 100%
  height 2px
  background rgba(245,245,245,1)
  margin 28px 0

.agreements-top
  padding 0 22px
  display flex
  flex-direction column
  justify-content space-between

.agreements-content
  width 100%
  text-align justify
  flex 1
  overflow-y auto
  font-size 28px

.agreements-button
  width 100%
  height 80px 
  background-color $theme-color
  border-radius 8px
  font-size 32px
  font-weight 600
  text-align center
  line-height 80px
  margin-top 32px
  color rgba(255,255,255,1)
.agreements-font-public
  line-height 44px

.agreements-font
  color $font-tip-color

.agreements-font-bold
  color $font-color
  font-weight 600

.paragraph
  margin-bottom 20px
  line-height 44px
