@import '../../assets/css/theme.styl'

.page-wrapper
  padding-top 140px

// 新版注册
.register-logo
  width 132px
  height 132px
  margin 0 auto

.register-from
  width 100%

.from-item
  width 640px
  height 100px
  margin 0 auto
  display flex
  align-items flex-end

.input-wrapper
  flex 1 1 auto
  display flex
  align-items flex-end
  height 100%
  border-bottom 1px solid #F5F5F5

.btn-code
  width 208px
  height 72px
  border-radius 12px
  border 1px solid $theme-color
  display flex
  align-items center
  justify-content center
  font-size 28px
  color $theme-color
  margin 0 20px

.disabled-btn
  color $font-disabled-color
  border 1px solid $font-disabled-color

.input-style
  margin-bottom 8px
  line-height 40px
  height 40px

.agreement-wrapper
  display flex
  align-items center
  margin 0 auto
  padding-top  80px
  width 654px
  font-size 24px
  color $font-color

.agree-agreement
  border none 
  background-color $theme-color
  color #ffffff
  font-size 18px
  text-align center
  line-height 28px

.agreement-radio
  width 28px
  height 28px
  box-sizing border-box
  border 3px solid $font-disabled-color
  border-radius 50%

.agreement-text
  margin-left 12px

.agreement
  color $theme-color

.submit-btn
  width 654px
  height 80px
  border-radius 12px
  margin 16px auto
  color #ffffff
  font-size 34px
  display flex
  align-items center
  justify-content center
  background-color $theme-color

input 
  width 100%
  height 40px
  line-height 40px
  padding 0
  margin 0
  font-size 28px
  color $font-color
