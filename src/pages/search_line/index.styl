
@import '../../assets/css/theme.styl'

.offer-wrapper
  margin 10px auto !important

.form-wrapper
  width 100%
  box-sizing border-box
  padding 0 24px
  position fixed
  height 380px
  z-index 100

.search-res-list
  width 100%
  padding-top 380px
  // border-top 2px solid #f5f5f5
  border-bottom 2px solid #f5f5f5

.search-item
  width 100%
  height 92px
  box-sizing border-box
  display flex
  align-items center
  justify-content space-between
  font-size 32px
  color #333
  padding 0 24px
  border-top 2px solid #f5f5f5

.city-icon
  font-size 34px
  margin 0 12px
  font-weight 700
  color $font-color

.city-wrapper
  flex 1

.other
  width 25%
  text-align center