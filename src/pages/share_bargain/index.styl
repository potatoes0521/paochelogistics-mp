@import '../../assets/css/theme.styl'

page 
  width 100%
  height 100%
  background-color $theme-color

.page-wrapper
  width 100%
  height 100%
  display flex
  align-items center
  justify-content center
  box-sizing border-box
  padding 32px 24px
  position relative

.wrapper-main
  width 100%
  height 100%
  border-radius 16px
  background-color #ffffff
  display flex
  flex-direction column
  box-sizing border-box
  padding 24px
  padding-top 40px
  position relative
  z-index 1

.order-user-info
  width 100%
  height 104px
  display flex 
  align-items center

.order-user-icon
  width 104px
  height 104px
  overflow hidden
  border-radius 50%

.order-user-msg
  display flex
  justify-content space-between
  flex-direction column
  height 100%
  margin-left 24px

.user-nick-name
  font-size 28px
  color $font-tip-color

.user-summary
  font-size 30px
  color $font-color

.order-msg
  width 100%
  padding 44px 24px
  background-color #f5f5f5
  border-radius 8px
  box-sizing border-box
  flex-wrap wrap
  font-size 32px
  color $font-color
  margin-top 34px
  line-height 44px

.icon-style
  font-size 32px
  margin 0 12px

.tip
  font-weight 600

.car-info
  margin-left 32px

.timer
  width 100%
  display flex
  align-items center
  justify-content center
  height 50px
  margin-top 40px
  margin-bottom 24px
  color $font-color
  font-size 28px 

.icon-style
  font-size 40px

.timer-tips
  font-size 38px
  color #F5A623

.timer-box
  border-radius 8px
  color #ffffff
  width 48px
  height 48px
  background-color #F5A623
  display flex
  align-items center
  justify-content center
  margin 0 6px
  font-size 30px
  font-weight 600

.text
  margin 0 6px

.timer-progress
  width cacl(100% - 48px)
  margin 0 24px
  height 16px
  background #f5f5f5
  border-radius 8px
  position relative
  overflow hidden

.progress-fill
  width 0
  position absolute
  height 100%
  background linear-gradient(90deg,rgba(255,164,53,1) 0%,rgba(241,101,18,1) 100%)
  border-radius 8px

.bargain-wrapper
  width 100%
  height 88px
  border-radius 8px
  margin-top 32px
  margin-bottom 40px

.btn
  background-color #F16512
  width 100%
  height 100%
  display flex
  align-items center
  justify-content center
  color #ffffff
  font-size 36px

button 
  margin 0px
  padding 0px

button::after
  border none

.bargain-list
  width 100%
  flex 1
  border-radius 16px
  background-color #FFF1E1
  display flex
  flex-direction column
  box-sizing border-box

.bargain-now
  color #BA793B
  font-weight 600
  font-size 30px

.bargain-title
  width 100%
  height 82px
  box-sizing border-box
  padding 0 32px
  border-bottom 2px solid #F9E8D1
  display flex
  align-items center
  justify-content space-between

.bargain-main
  flex 1
  
.swiper
  width 100%
  height 100%
  box-sizing border-box
  padding 32px

.swiper-item
  width 100%
  height 64px
  display flex
  align-items center
  justify-content space-between
  color #BA793B
  margin-bottom 24px

.userInfo-wrapper
  display flex
  align-items center

.user-name
  font-size 30px
  margin-left 24px

.bargain-price
  font-size 28px

.user-icon
  width 64px
  height 64px
  border-radius 50%
  overflow hidden

image
  width 100%
  height 100%

.public
  position absolute
  background-size cover
  background-repeat no-repeat
  // background-position center center

.bottom
  width 238px
  height 72px
  bottom 0
  right 0
  background-image url('https://resource.paoche56.com/paochelogistics/mp_img/bargain_bg_bottom.png') 
  
.right
  width 61px
  height 787px
  top 132px
  right 0
  background-image url('https://resource.paoche56.com/paochelogistics/mp_img/bargain_bg_right.png')
  background-position right top

.left
  width 138px
  height 359px
  top 106px
  left 0
  background-image url('https://resource.paoche56.com/paochelogistics/mp_img/bargain_bg_left.png')
