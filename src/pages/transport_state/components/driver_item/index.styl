@import '../../../../assets/css/theme.styl'

.driver-wrapper
  width 100%
  box-sizing border-box
  padding 32px 8px
  height 222px
  border-bottom 2px solid #f5f5f5
  display flex
  justify-content space-between
  flex-direction column
  
.driver-item
  width 100%
  box-sizing border-box
  display flex
  align-items center
  justify-content space-between

.driver-title
  font-size 30px
  font-weight 600
  color $font-color

.driver
  font-size 30px
  line-height 42px
  color $font-color
  text-align right
  