@import '../../assets/css/theme.styl'

page
  width 100%
  background-color #ffffff

.tabs-wrapper
  width 100%
  height 88px
  display flex
  align-items center
  justify-content space-between
  position fixed
  top 0
  left 0
  right 0
  margin 0 auto
  background-color #ffffff
  border-bottom 2px solid #f5f5f5

.tabs-item
  width 33.33%
  height 100%
  display flex
  align-items center
  justify-content center

.tab-text
  color $font-text
  font-size 28px

.active-style
  color $theme-color
  
.car-tab-icon
  font-size 12px
  margin-left 8px

.car-list-wrapper
  padding-top 90px

.line
  width 100%
  height 2px 
  background #f5f5f5

.car-price-wrapper
  width 100%
  height 100%
  position fixed
  top 90px
  background-color rgba(0, 0, 0, 0.5)
  z-index 21

.car-price
  width 100%
  height 338px
  background-color #ffffff
  padding 22px 21px 34px
  box-sizing border-box
  display flex
  flex-wrap wrap
  
.car-price-item
  width 206px
  height 66px
  border-radius 8px
  border 2px solid #EFEFEF
  text-align center
  line-height 66px
  font-size 26px
  color $font-color
  margin 14px 15px
  box-sizing border-box

.choose-car-price
  border 2px solid $theme-color
  color $theme-color