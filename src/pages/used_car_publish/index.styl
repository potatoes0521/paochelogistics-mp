@import '../../assets/css/theme.styl'

page 
  background-color #F7F7F7

.page-wrapper
  width 100%

.tab-wrapper
  width 100%
  height 88px
  display flex
  align-items center
  justify-content space-between
  background-color #ffffff
  position fixed
  left 0
  right 0
  top 0
  z-index 100

.vertical-line
  width 2px
  height 48px
  background-color #F5F5F5

.tab-item
  position relative
  flex 1
  color $font-color
  font-size 32px
  text-overflow ellipsis
  height 100%
  overflow hidden
  display flex
  align-items center
  justify-content center
  font-weight 700
  
.tab-item-active::after
  content ''
  width 100%
  height 6px
  background-color $theme-color
  position absolute
  bottom 0
  left 0
  right 0
  margin 0 auto

.tab-panel,
.tab-panel-main
  flex 1
  display flex
  justify-content space-between
  flex-direction column

.tab-panel
  padding-top 88px
  height 100vh
  box-sizing border-box

.tab-panel-main
  overflow-y scroll
  padding-bottom 40px

.must-icon
  width 18px
  font-size 32px
  color $price-color
  margin-right 8px

.publish-item
  padding 32px 0
  margin 0 32px
  display flex
  align-items center

.publish-label
  width 150px
  font-size 30px
  color $font-color

.long-label
  width 200px

.publish-content
  flex 1
  display flex
  justify-content flex-end
  align-items center

.more-text,
.more-content
  align-items stretch

.publish-icon-right
  font-size 28px
  margin-left 10px
  color $font-h-color

.more-content-icon
  line-height 42px

.input
  text-align right
  font-size 30px
  color $font-color
  flex 1

.content-text
  font-size 30px
  color $font-color

.margin-text
  margin-left 16px

.placeholder-style
  color $font-h-color
  font-size 30px

.publish-item-image-title
  padding-bottom 18px

.time-picker
  flex 1
  text-align right

.image-list
  display flex
  align-items center
  flex-wrap wrap
  margin-left 26px

.image-item
  width 180px
  height 120px
  border-radius 5px
  background-color #F7F7F7
  box-sizing border-box
  display flex
  align-items center
  justify-content center
  margin-right 24px
  margin-bottom 24px
  position relative

image
  width 100%
  height 100%
  border-radius 5px

.delete-btn
  position absolute
  right -10px
  top -14px
  width 26px
  height 26px
  color #ffffff
  background-color #EF4E4E
  font-size 18px
  border-radius 50%
  border 4px solid #ffffff
  line-height 26px
  text-align center

.icon-add
  font-size 38px
  color #ffffff

.add-btn
  border 2px dashed #D2D2D2

.add-btn-wrapper
  width 68px
  height 68px
  display flex
  border-radius 50%
  align-items center
  justify-content center
  background-color rgba(0,0,0,0.25)

.tips-only-one
  font-size 30px
  line-height 42px
  color #D2D2D2
  width 390px

.images-tips
  padding 8px 20px
  background-color #FFF8EF
  border-radius 5px
  font-size 24px
  line-height 34px
  color #d2d2d2
  margin 0 24px 
  margin-bottom 24px

.line
  width 100%
  height 2px
  background-color #f5f5f5

.publish-card
  margin 24px 24px
  background-color #ffffff
  border-radius 8px

.bottom-tips
  margin 0 24px
  padding 16px 26px
  background-color #FFF8EF
  color #D5AF7E
  font-size 24px
  line-height 34px
  text-align justify
  border-radius 8px

.tips-title
  font-weight 700

.btn-wrapper
  width 100%
  height 128px
  box-shadow 0px -2px 8px 2px rgba(0,0,0,0.08)
  box-sizing border-box
  padding 24px
  background-color #ffffff
  position relative
  z-index 1

.btn
  width 100%
  height 100%
  background-color $theme-color
  border-radius 8px
  font-size 32px
  color #ffffff
  display flex
  align-items center
  justify-content center

.min-publish-wrapper
  padding-top 88px
  border-top 2px solid #f5f5f5

.publish-choose-customer
  width 100%
  height 108px
  box-sizing border-box
  padding 0 32px
  background-color #80A6C2
  border-radius 8px 8px 0px 0px
  display flex
  justify-content space-between
  align-items center

.customer-info
  display flex
  justify-content space-between
  align-items center

.customer-img
  font-size 46px
  color $background-color
  margin-right 20px

.customer-name
  font-size 36px
  font-weight 700
  color $background-color

.choose-arrow
  font-size 32px
  color $background-color
